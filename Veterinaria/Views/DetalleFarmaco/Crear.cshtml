@model CapaModelo.DetalleFarmaco
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    @*<div class="breadcrumb-title pe-3">Home</div>*@
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Detalle Farmaco</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class='bx bxs-edit'></i></button>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Detalle Farmaco</h6>
                <hr />
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Codigo</th>
                                            <th>Concentracion</th>
                                            <th>Fecha Registro</th>
                                            <th>Laboratorio</th>
                                            <th>Proveedor</th>
                                            <th>Via</th>
                                            <th>Nombre comercial</th>
                                            <th>Numero Lote</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title" id="exampleModalLabel">Detalle Farmaco</h5>

                    </div>
                    <div class="modal-body">
                        <form id="form">
                            <input type="hidden" class="form-control form-control-sm model" id="txtid" name="CodDetalleFarmaco">

                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Concentracion <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtConcentracion" name="Concentracion" autocomplete="off">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Fecha Registro <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control form-control-sm model" id="txtFechaRegistro" name="FechaRegistro" autocomplete="off">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="inputPassword" class="col-sm-2 col-form-label col-form-label-sm">Laboratorio</label>
                                <div class="col-sm-10">
                                    <select class="form-control form-control-sm model options_laboratorio" id="cboLaboratorio" name="Laboratorio"></select>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="inputPassword" class="col-sm-2 col-form-label col-form-label-sm">Proveedor</label>
                                <div class="col-sm-10">
                                    <select class="form-control form-control-sm model options_Proveedor" id="cboProveedor" name="Proveedor"></select>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="inputPassword" class="col-sm-2 col-form-label col-form-label-sm">Via Administracion</label>
                                <div class="col-sm-10">
                                    <select class="form-control form-control-sm model options_ViaAdministracion" id="cboVia" name="ViaAdminitracion"></select>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Nombre Comercial<span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtNombreComercial" name="NombreComercial" autocomplete="off">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="staticEmail" class="col-sm-2 col-form-label col-form-label-sm">Numero Lote<span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtNumeroLote" name="NumeroLote" autocomplete="off">
                                </div>
                            </div>
                            <br />


                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger px-2" data-bs-dismiss="modal"><i class='bx bx-message-square-x mr-1'></i>Cerrar</button>
                        <button type="button" class="btn btn-primary px-2" onclick="Guardar()"><i class='bx bx-message-square-check mr-1'></i>Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{

        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/DetalleFarmaco_Crear.js"></script>
    }
</body>
