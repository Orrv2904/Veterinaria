@model CapaModelo.Compras
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Registrar Compra</h6>
                <hr />

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card border-success">

                            <div class="card-body p-2 card-venta">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="card border-info">
                                            <div class="card-body card-compra p-2">
                                                <div class="row">

                                                    @*Laboratorios*@
                                                    <div class="col-sm-6">
                                                        <div class="card border-info border-top border-0 border-4">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">Laboratorio</h6>
                                                                <div class="row align-items-end">
                                                                    <input id="txtIdLaboratorio" type="hidden" value="0" />
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">RUC</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRucLaboratorio" name="RUC">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-8">
                                                                        <label class="col-form-label col-form-label-sm">Razon Social</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRazonSocialLaboratorio" name="RazonSocial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <div class="form-group mb-0">
                                                                            <button id="btnBuscarLaboratorio" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarLaboratorio()"><i class="fas fa-search"></i> Buscar</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*Proveedores*@
                                                    <div class="col-md-6">
                                                        <div class="card border-info border-top border-0 border-4">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">Proveedor</h6>
                                                                <div class="row align-items-end">
                                                                    <input id="txtIdProveedor" type="hidden" value="0" />
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">RUC</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRucProveedor" name="RUC">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <label class="col-form-label col-form-label-sm">Razon Social</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtRazonSocialProveedor" name="RazonSocial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <div class="form-group mb-0">
                                                                            <button id="btnBuscarProveedor" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarProveedor()"><i class="fas fa-search"></i> Buscar</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                             
                                                <div class="row">

                                                    <div class="col-md-12">
                                                        <div class="card border-info border-top border-0 border-4">
                                                            <div class="card-body p-2">
                                                                <h6 class="card-title mb-1">Producto</h6>
                                                                <div class="row">
                                                                    <input id="txtIdProducto" type="hidden" value="0" />
                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Codigo</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" id="txtCodigoProducto" name="Codigo" autocomplete="off">
                                                                        </div>
                                                                    </div>


                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Nombre Generico</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtNombreProducto" name="Nombre">
                                                                        </div>
                                                                    </div>
                                                                    <input id="txtIdDetalleFarmaco" type="hidden" value="0" />
                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Nombre Comercial</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtNombreComercial" name="NombreComercial">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Concentracion</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtConcentracion" name="Concentracion">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Presentacion</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" id="txtPresentacion" name="Codigo" autocomplete="off">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        <label class="col-form-label col-form-label-sm">Fecha Vencimiento</label>
                                                                        <div class="input-group">
                                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                                            <input type="text" class="form-control border-start-0" readonly id="txtVencimiento" name="FechaVencimiento">
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-sm-3">
                                                                        <div class="form-group mb-0">
                                                                            <label for="btnBuscarTienda" class="col-form-label col-form-label-sm invisible">Buscar:</label>
                                                                            <button id="btnBuscarProducto" type="button" class="btn btn-sm btn-primary btn-block" onclick="buscarProducto()"><i class="fas fa-search"></i> Buscar</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <label class="col-form-label col-form-label-sm">Cantidad</label>
                                                        <div class="input-group">
                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                            <input type="text" class="form-control border-start-0" id="txtCantidadProducto" name="Cantidad" value="0">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <label class="col-form-label col-form-label-sm">Precio Compra</label>
                                                        <div class="input-group">
                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                            <input type="text" class="form-control border-start-0" id="txtPrecioCompraProducto" name="PrecioCompra" value="0">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <label class="col-form-label col-form-label-sm">Precio Venta</label>
                                                        <div class="input-group">
                                                            @*<span class="input-group-text bg-transparent"><i class='bx bxs-capsule'></i></span>*@
                                                            <input type="text" class="form-control border-start-0" id="txtPrecioVentaProducto" name="PrecioVenta" value="0">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mt-2">
                                                    <div class="col-sm-12">
                                                        <button id="btnAgregarCompra" class="btn btn-success btn-sm float-right">
                                                            <i class="fas fa-plus"></i> Agregar a compra
                                                        </button>
                                                    </div>

                                                </div>

                                                <hr />
                                                <div class="row mt-3">
                                                    <div class="col-sm-12">
                                                        <div class="table-responsive-sm">
                                                            <table id="tbCompra" class="table table-striped table-bordered nowrap table-sm" style="width:100%">
                                                                <thead>
                                                                    <tr>
                                                                        <th></th>
                                                                        <th>Codigo Producto</th>
                                                                        <th>Nombre Generico</th>
                                                                        <th>Nombre Comercial</th>
                                                                        <th>Proveedor</th>
                                                                        <th>Laboratorio</th>
                                                                        <th>Presentacion</th>
                                                                        <th>Fecha Vencimiento</th>
                                                                        <th>Cantidad</th>
                                                                        <th>Precio Compra</th>
                                                                        <th>Precio Venta</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer bg-white border-info">
                                                <button id="btnTerminarGuardarCompra" class="btn btn-primary btn-sm float-right">
                                                    <i class="fas fa-tags"></i> Terminar y Guardar Compra
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <
        </div>
    </div>
</body>



<!-- MODAL PROVEEDOR -->
<div class="modal fade" id="modalProveedor" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Proveedor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProveedor" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>RUC</th>
                                <th>Razon Social</th>
                                <th>Direccion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL LABORATORIO -->
<div class="modal fade" id="modalLaboratorio" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Laboratorio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbLaboratorio" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>RUC</th>
                                <th>Razon Social</th>
                                <th>Direccion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL Presentacion -->
<div class="modal fade" id="modalPresentacion" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Presentacion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbPresentacion" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Presentaciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- MODAL PRODUCTO -->
<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalle Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tbProducto" class="table table-striped table-bordered nowrap compact" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Codigo</th>
                                <th>Nombre Generico</th>
                                <th>Nombre Comercial</th>
                                <th>Presentacion</th>
                                <th>Concentracion</th>
                                <th>Stock</th>
                                <th>Prescripcion Medica</th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="@Url.Content("~/Scripts/Views/Compra_Crear.js")" type="text/javascript"></script>
}

