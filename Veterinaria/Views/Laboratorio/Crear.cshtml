@model CapaModelo.Laboratorios
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <!--wrapper-->
    <div class="wrapper">
        <!--start page wrapper -->
        <div class="page-wrapper">
            <div class="page-content">
                <!--breadcrumb-->
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    @*<div class="breadcrumb-title pe-3">Home</div>*@
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <!--<!--<!--<li class="breadcrumb-item">--><!---->
                                    <!---->@*<a href="javascript:;"><i class="bx bx-home-alt"></i></a>*@
                                <!--</li>-->
                                <li class="breadcrumb-item active" aria-current="page">Laboratorios</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class='bx bxs-edit'></i></button>
                        </div>
                    </div>
                </div>
                <!--end breadcrumb-->
                <h6 class="mb-0 text-uppercase">Laboratorios</h6>
                <hr />
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="tbdata" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Codigo</th>
                                            <th>Direccion</th>
                                            <th>Correo</th>
                                            <th>Telefono</th>
                                            <th>Razon Social</th>
                                            <th>RUC</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header btn-info text-white">
                        <h5 class="modal-title" id="exampleModalLabel">Categoria</h5>

                    </div>
                    <div class="modal-body">
                        <form id="form">
                            @*<input id="txtid" name="IdRol" value="0" type="text" />*@
                            <input type="hidden" class="form-control form-control-sm model" id="txtid" name="CodLaboratorio">

                            <div class="form-group row">
                                <label for="txtDireccion" class="col-sm-2 col-form-label col-form-label-sm">Direccion: <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="Direccion">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtCorreo" class="col-sm-2 col-form-label col-form-label-sm">Correo: <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtCorreo" name="Correo">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtTelefono" class="col-sm-2 col-form-label col-form-label-sm">Telefono: <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtTelefono" name="Telefono">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtRazonSocial" class="col-sm-2 col-form-label col-form-label-sm">Razon Social: <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtRazonSocial" name="Razon Social">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtRUC" class="col-sm-2 col-form-label col-form-label-sm">RUC: <span class="error"></span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-sm model" id="txtRUC" name="RUC">
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <label for="cboEstado" class="col-sm-2 col-form-label col-form-label-sm">Estado:</label>
                                <div class="col-sm-10">
                                    <select class="form-control form-control-sm model" id="cboEstado" name="Estado">
                                        <option value="1">Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger px-2" data-bs-dismiss="modal"><i class='bx bx-message-square-x mr-1'></i>Cerrar</button>
                        <button type="button" class="btn btn-primary px-2" onclick="Guardar()"><i class='bx bx-message-square-check mr-1'></i>Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{

        <partial name="_ValidationScriptsPartial" />
        <script src="~/js/Laboratorio_Crear.js"></script>
    }
</body>
